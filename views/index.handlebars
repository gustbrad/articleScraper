<nav>
    <div class="nav-wrapper">
        <a href="#" class="page-header">Tech Scraper</a>
        <ul class="right">
            <li>
                <a href="/scrape" class="btn-floating btn-large waves-effect waves-light blue btn tooltipped" data-position="bottom" data-tooltip="Scrape BGR(Boy Genius Report) for news articles!">
                    <i class="material-icons right">cloud_download</i>Get Tech Articles</a>
            </li>
        </ul>
    </div>
</nav>
<br>

<div class="container">
    <table>
        <tbody>
            {{#each articles}}
            <div class=row>
                <div class="col s12 section">
                    <p class = "titles">{{this.title}}</p>
                    <p class = "bodies">{{this.body}}</p>
                    <a href="{{this.link}}" class="collection-item tooltipped" target="_blank" data-position="bottom" data-tooltip="Click the link to view the full news article!">URL: {{this.link}}</a>
                    <button class="noteButton btn-floating btn-large waves-effect waves-light blue btn tooltipped" id="{{this._id}}" data-position="bottom" data-tooltip="Add/view your notes"><i class="material-icons right">note</i></button>
                </div>
            </div>
            {{/each}}
        </tbody>
    </table>
</div>
<div id="noteModal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>Notes</h4>
        <ul class="messages collection"></ul>
        <form name="noteForm" id="noteForm">
            <input required placeholder="Enter a note here" type="text" name="noteText" id="noteText">
            <button class="btn-floating btn-large waves-effect waves-light blue btn" type="submit" id="noteButton">
             <i class="material-icons right">note_add</i> Post a note
            </button>
    </div>
    <div class="modal-footer">
        <a href="/" class="modal-action modal-close waves-effect waves-light btn-flat">Close</a>
        </form>
    </div>
</div>